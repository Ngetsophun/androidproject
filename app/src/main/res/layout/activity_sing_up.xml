<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginForm.SingUpActivity">


    <!--    Singup from-->
    <LinearLayout
        android:id="@+id/Sing_upActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/cover" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="Sign Up Information"/>

        <EditText
            android:id="@+id/Sing_up_Username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_text"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="15dp"
            android:elevation="8dp"
            android:hint="Name"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/Sing_up_Password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_text"
            android:drawableLeft="@drawable/baseline_vpn_key_24"
            android:drawablePadding="15dp"
            android:elevation="8dp"
            android:hint="Passward"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/Confoirm_pass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_text"
            android:drawableLeft="@drawable/baseline_vpn_key_24"
            android:drawablePadding="15dp"
            android:elevation="8dp"
            android:hint="Confirm"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

        <Button
            android:id="@+id/btnSing_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_text"
            android:elevation="20dp"
            android:textSize="20dp"
            android:text="Sing Up"/>


    </LinearLayout>

</LinearLayout>
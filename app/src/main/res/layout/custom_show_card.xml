<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
       android:layout_margin="5dp"
        android:elevation="3dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/sheet_sale"
            android:background="@drawable/bg_pro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"

                android:layout_marginLeft="10dp"

                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/CardImage"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_launcher_background" />

                    <TextView
                        android:id="@+id/Card_Price"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="20dp"
                        android:text="Price"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Card_nameKH"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=" Name KH" />

                    <TextView
                        android:id="@+id/Card_nameEng"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=" Name Eng" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="end"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:id="@+id/imgdelete_Card"
                            android:src="@drawable/delete"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="end|bottom"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:layout_width="match_parent"

                            android:gravity="end|bottom"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/btnMinusd"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="40dp"
                                android:gravity="bottom"

                                android:layout_marginBottom="5dp"
                                android:layout_height="40dp">
                                <EditText
                                    android:id="@+id/editQty"
                                    android:layout_width="40dp"
                                    android:inputType="number"
                                    android:paddingLeft="5dp"
                                    android:layout_gravity="center"
                                    android:layout_height="35dp"
                                    android:background="@drawable/edit_text_background"
                                    />
                            </LinearLayout>
                            <Button
                                android:id="@+id/btnPlus"
                                android:layout_width="50dp"
                                android:text="+"
                                android:textSize="20dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>